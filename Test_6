/*完成第四章课后习题4,5,7。*/
/*6-4*/
#include <stdio.h>
#define MAXN 1024
int main(){
	int a[MAXN],b[MAXN];
    int n,i,k,m,l,o,p=1;
	printf("Please input the length of this array and the numbers in order with ',' in between\n");
	scanf("%d:",&n);
	for(i=0;i<n;i++){
		scanf("%d,",&a[i]);
	}
	printf("original:");
	for(m=0;m<n;m++){
		printf("%d\t",a[m]);
	}
	b[0]=a[0];
	printf("\ncopy:    %d\t",b[0]);
	for(k=1;k<n;k++){
		b[p]=a[k];
		for(l=0;l<p;l++){
			if(b[p]==b[l]){
				k++;
				p--;
				break;
			}
		}
		p++;
	}
	for(o=1;o<=p-1;o++){
		printf("%d\t",b[o]);
	}
	//int *array;
	//array=(int*)malloc(sizeof(int)*n);
	return 0;
}

/*6-5*/
#include <stdio.h>
#define MAXN 1024
int main(){
	int a[MAXN];
	int i,k,length=0,platform=1,n=1;
	char ch;
	printf("Please input the numbers in array in order:\n");
	do{         
        scanf("%d",&a[length]);
        length++;  /*0~(length-1)*/
    }while((ch=getchar())!='\n');
	for(k=1;k<length;k++){
		if(a[k]!=a[(k-1)]){
			if(n>platform){
			platform=n;
			n=1;
		    }
		    else n=1;
		}
		else n++;
	}
	if(n>platform) platform=n;
	printf("%d",platform);
    return 0;
}

/*6-7*/
#include <stdio.h>
#define MAXN 1024
int main(){
	int a[MAXN];
	int i,k,N;
	scanf("%d",&N);
	a[0]=a[1]=0;
	for(i=2;i<=N;i++){
		a[i]=1;
	}
	for(i=2;i<=N;i++){
		if(a[i]==1){
			for(k=i+1;k<=N;k++){
			    if(k%i==0) a[k]=0;
		    }
		}
	}
	printf("All the Prime that less than %d:\n",N);
	for(i=2;i<=N;i++){
	    if(a[i]==1)  printf("%d\t",i);
    } 
    return 0;

}
